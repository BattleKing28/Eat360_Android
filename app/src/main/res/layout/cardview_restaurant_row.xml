<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginTop="10dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:selectableItemBackground"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/res_card_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:marqueeRepeatLimit="marquee_forever"
                android:maxLines="1"
                android:text="Vivo Pizza"
                android:textColor="@color/dark_title"
                android:textStyle="bold"
                android:textSize="16sp"
                android:typeface="sans" />

            <ImageButton
                android:id="@+id/res_card_mapicon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/white_transparent"
                android:scaleType="centerCrop"
                android:src="@drawable/search_map"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.joooonho.SelectableRoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/res_card_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:sriv_left_bottom_corner_radius="5dp"
                app:sriv_left_top_corner_radius="5dp"
                app:sriv_right_bottom_corner_radius="5dp"
                app:sriv_right_top_corner_radius="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingRight="0dp"
                android:paddingEnd="0dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/res_card_radius"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="3 km"
                    android:textColor="@color/blue"
                    android:textSize="14sp"
                    android:gravity="end"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/res_card_address"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Sydney NSW 2000\nAustralia"
                    android:ellipsize="end"
                    android:textColor="@color/dark_text"
                    android:textSize="14sp"
                    android:lines="3"
                    android:gravity="center_vertical"
                    android:layout_marginTop="0dp"
                    android:typeface="sans"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:id="@+id/res_card_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="@string/Menu_underlined"
                    android:textColor="@color/blue"
                    android:textSize="20sp"
                    android:gravity="end"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <!--<com.facebook.share.widget.ShareButton-->
                    <!--android:id="@+id/share_facebook"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:gravity="center"-->
                    <!--android:paddingBottom="3dp"-->
                    <!--android:paddingTop="3dp"-->
                    <!--android:textSize="10sp" />-->

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>