<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="40dp">

    <ImageView
        android:id="@+id/item_detail_opentime_isactive"
        android:src="@drawable/opentime_active"
        android:padding="15dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/item_detail_opentime_weekday"
        android:text="Mon"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/item_detail_opentime_from"
        android:text="12:00 PM"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/item_detail_opentime_till"
        android:text="11:00 PM"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/item_detail_breaktime_from"
        android:text="12:00"
        android:gravity="center_vertical|end"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/item_detail_breaktime_between"
        android:text=" - "
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/item_detail_breaktime_till"
        android:text="11:00"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

</LinearLayout>